        await startStreamingSTT();
      }
    }

    // („Åù„ÅÆ‰ªñ„ÅÆÈñ¢Êï∞„ÅØÂ§âÊõ¥„Å™„Åó)
    function stopAllActivities() {
      if (isProcessing) {
